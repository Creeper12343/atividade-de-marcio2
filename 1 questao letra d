#include <stdio.h>
#include <string.h>

#define MAX_ESTADOS 26
#define MAX_NOME 60

typedef struct {
    char nome[MAX_NOME];
    int veiculos;
    int acidentes;
} Estado;

float calculaMediaAcidentes(Estado cadastro[], int n) {
    int soma = 0;
    int i;

    if (n <= 0)
        return 0.0;

    for (i = 0; i < n; i++) {
        soma += cadastro[i].acidentes;
    }

    return (float)soma / n;
}

int main(void) {
    Estado cadastro[MAX_ESTADOS];
    int n, i;
    float media;

    printf("Quantos estados vai cadastrar? (max %d): ", MAX_ESTADOS);
    scanf("%d", &n);
    getchar(); // limpa buffer

    for (i = 0; i < n; i++) {
        printf("\n--- Estado %d ---\n", i + 1);
        printf("Nome: ");
        fgets(cadastro[i].nome, MAX_NOME, stdin);
        cadastro[i].nome[strcspn(cadastro[i].nome, "\n")] = '\0'; 

        printf("Numero de veiculos: ");
        scanf("%d", &cadastro[i].veiculos);
        printf("Numero de acidentes: ");
        scanf("%d", &cadastro[i].acidentes);
        getchar(); 
    }

    media = calculaMediaAcidentes(cadastro, n);

    printf("\n===== RESULTADO =====\n");
    printf("Média de acidentes no país: %.2f\n", media);

    return 0;
}
