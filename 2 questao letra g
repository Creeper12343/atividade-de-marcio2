#include <stdio.h>
#include <string.h>

typedef struct {
    int codigo;
    char descricao[100];
} Produto;

void exibir_produtos(const Produto produtos[], int n) {
    if (n <= 0) {
        printf("Nenhum produto cadastrado.\n");
        return;
    }
    for (int i = 0; i < n; i++) {
        printf("Codigo: %d  -  Descricao: %s\n", produtos[i].codigo, produtos[i].descricao);
    }
}

int main(void) {
    Produto lista[3];
    lista[0].codigo = 101;
    strncpy(lista[0].descricao, "Caixa de parafusos", sizeof(lista[0].descricao));
    lista[0].descricao[sizeof(lista[0].descricao) - 1] = '\0';

    lista[1].codigo = 202;
    strncpy(lista[1].descricao, "Motor eletrico 220V", sizeof(lista[1].descricao));
    lista[1].descricao[sizeof(lista[1].descricao) - 1] = '\0';

    lista[2].codigo = 303;
    strncpy(lista[2].descricao, "Sensor de temperatura", sizeof(lista[2].descricao));
    lista[2].descricao[sizeof(lista[2].descricao) - 1] = '\0';

    exibir_produtos(lista, 3);
    return 0;
}
