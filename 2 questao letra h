#include <stdio.h>
#include <string.h>

typedef struct {
    int codigo;
    char descricao[100];
    int estoque;
} Produto;

void exibir_estoque_zero(const Produto produtos[], int n) {
    int encontrou = 0;
    for (int i = 0; i < n; i++) {
        if (produtos[i].estoque == 0) {
            printf("Codigo: %d  -  Descricao: %s\n", produtos[i].codigo, produtos[i].descricao);
            encontrou = 1;
        }
    }
    if (!encontrou) {
        printf("Nenhum produto com estoque zero.\n");
    }
}

int main(void) {
    Produto lista[3];

    lista[0].codigo = 10;
    strcpy(lista[0].descricao, "Teclado");
    lista[0].estoque = 0;

    lista[1].codigo = 20;
    strcpy(lista[1].descricao, "Mouse");
    lista[1].estoque = 5;

    lista[2].codigo = 30;
    strcpy(lista[2].descricao, "Monitor");
    lista[2].estoque = 0;

    exibir_estoque_zero(lista, 3);
    return 0;
}
